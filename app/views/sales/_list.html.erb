<table>
  <thead>
    <tr>
      <th>Comprador</th>
      <th>Fornecedor</th>
      <th>Preço</th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% sales.each do |sale| %>
      <tr>
        <td><%= link_to sale.buyer.name, buyer_path(sale.buyer) %></td>
        <td><%= link_to sale.provider.name, provider_path(sale.provider) %></td>
        <td><%= sale.price %></td>
        <td><%= sale.quantity %></td>
        <td><%= link_to t('views.form.actions.show'), sale %></td>
        <td><%= link_to t('views.form.actions.edit'), edit_sale_path(sale) %></td>
        <td><%= link_to t('views.form.actions.destroy'), sale, method: :delete, data: { confirm: 'Têm certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>